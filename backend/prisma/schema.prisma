generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Quiz {
  id        Int        @id @default(autoincrement())
  title     String
  questions Question[]
  createdAt DateTime   @default(now())
}

model Question {
  id            Int     @id @default(autoincrement())
  quizId        Int
  quiz          Quiz    @relation(fields: [quizId], references: [id], onDelete: Cascade)
  type          String  // BOOLEAN | TEXT | CHECKBOX
  title         String
  options       String?
  correctAnswer String
}
